
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="glyphicon-camera"></span>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("New Inventory", "New", "Inventory", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Used Inventory", "Used", "Inventory", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Specials", "Specials", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Contact Us", "ContactUs", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                    {
                        <li class="dropdown" data-dropdown="dropdown">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                Admin<span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Search Vehicles", "Vehicles", "Inventory", new { area = "" }, new { @class = "navbar-brand" })</li>
                                <li>@Html.ActionLink("Add Vehicle", "AddVehicle", "Admin", new { area = "" }, new { @class = "navbar-brand" })</li>
                                <li>@Html.ActionLink("Add/Remove Specials","Specials", "Admin", new { area = "" }, new { @class = "navbar-brand" })</li>
                                <li>@Html.ActionLink("Manage Users", "GetUsers", "Admin", new { area = "" }, new { @class = "navbar-brand" })</li>
                                <li>@Html.ActionLink("Add User", "AddUser", "Admin", new { area = "" }, new { @class = "navbar-brand" })</li>
                                <li>@Html.ActionLink("Add Make", "Makes", "Admin", new { area = "" }, new { @class = "navbar-brand" })</li>
                                <li>@Html.ActionLink("Add Model", "Models", "Admin", new { area = "" }, new { @class = "navbar-brand" })</li>
                                <li>@Html.ActionLink("Reports", "Index", "Reports", new { area = "" }, new { @class = "navbar-brand" })</li>
                                <li>@Html.ActionLink("Change Password", "ChangePassword", "Admin", new { id = User.Identity.Name, area = "" }, new { @class = "navbar-brand" })</li>
                            </ul>
                        </li>


                    }
                    @if (User.Identity.IsAuthenticated && User.IsInRole("sales"))
                    {

                        <li class="dropdown" data-dropdown="dropdown">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                Sales<span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Sales", "Vehicles", "Inventory", new { area = "" }, new { @class = "navbar-brand" })</li>
                                <li>@Html.ActionLink("Change Password", "ChangePassword", "Admin", new { id=User.Identity.Name,  area = "" }, new { @class = "navbar-brand" })</li>
                            </ul>
                        </li>

                    }
                </ul>
                @Html.Partial("_Login")  @*don't want to have login link showing ever*@
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Home.js"></script>
</body>
</html>