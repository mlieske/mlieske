@model CarDealershipMastery.Models.TableModels.Contact

@{
    ViewBag.Title = "ContactUs";
}

<h2>ContactUs</h2>
<div class="container">
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-xs-6">
                <div class="form-group">
                    <label>First Name: </label>
                    @Html.TextBoxFor(m => m.ContactFirstName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Last Name: </label>
                    @Html.TextBoxFor(m => m.ContactLastName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Email: </label>
                    @Html.TextBoxFor(m => m.ContactEmail, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Phone: </label>
                    @Html.TextBoxFor(m => m.ContactPhone, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Message: </label>
                    @Html.TextAreaFor(m => m.ContactMessage, new { @class = "form-control" })
                </div>
                <button type="submit">Submit</button>
        </div>
        <div class="col-xs-6">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3004.1180146676834!2d-81.36044838536694!3d41.153776118409!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x883125211a78e03f%3A0x736779bb2e960210!2s111+W+Main+St%2C+Kent%2C+OH+44240!5e0!3m2!1sen!2sus!4v1501112644667" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
    </div>
    }
</div>

