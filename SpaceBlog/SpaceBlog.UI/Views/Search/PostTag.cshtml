@model IEnumerable<SpaceBlog.Models.Post>
@{
    ViewBag.Title = "PostTag";
}

<div class="jumbotron text-center">
    <h1>Search</h1>
</div>


<form class="form-inline">

    <div class="form-group">
        <label for="searchBox">Search</label>
        <input class="form-control" id="searchBox">
    </div>
    <div class="form-group">
        <select class="form-control" v-model="searchBlogCategory">
            <option value="">Search Blog Category&nbsp;&nbsp;</option>
            <option value="post">Post</option>
            <option value="tags"> Tags</option>
            <option value="username">UserName</option>
            <option value="rating">Rating</option>
        </select>
    </div>
    <button type="submit" class="btn btn-default" v-on:click="search">Search</button>
</form>


<div class="row">
    <div class="col-xs-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>Post Title</td>
                    <td>Post Date</td>
                    <td>Blog Excerpt</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(p.PostTitle, "Index", "Post", new { id = p.PostId }, null)</td>
                        <td>@p.CreationDate</td>
                        <td>@p.PostBody.Substring(0, 10)...</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


