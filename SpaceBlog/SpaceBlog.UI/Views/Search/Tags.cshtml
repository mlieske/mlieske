
@model IEnumerable<SpaceBlog.Models.Tag>
@{
    ViewBag.Title = "Tags";
}


<div class="jumbotron text-center">
    <h1>Search</h1>
</div>


<form class="form-inline">

    <div class="form-group">
        <label for="searchBox">Search</label>
        <input class="form-control" id="searchBox">
    </div>
    <div class="form-group">
        <select class="form-control" v-model="searchBlogCategory">
            <option value="">Search Blog Category&nbsp;&nbsp;</option>
            <option value="post">Post</option>
            <option value="tags"> Tags</option>
            <option value="username">UserName</option>
            <option value="rating">Rating</option>
        </select>
    </div>
    <button type="submit" class="btn btn-default" v-on:click="search">Search</button>
</form>


<div class="row">
    <div class="col-xs-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>Tag Name</td>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(p.TagName, "PostTag", "Search", new { id = p.TagName}, null)</td>
                    </tr>
                }
                

            </tbody>
        </table>
    </div>
</div>
