@model List<SpaceBlog.Models.StaticPage>
@{
    ViewBag.Title = "Pages";
}

<style>
    h2 {
        color: aliceblue
    }
</style>
<h2>Manage Static Pages</h2>
<div class="row">
    <div class="jumbotron col-xs-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>Page Title</td>
                    <td>Delete</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(p.StaticPageTitle, "Edit", "StaticPage", new { id = p.StaticPageId }, null)</td>
                        <td>@Html.ActionLink("X", "Delete", "StaticPage", new { id = p.StaticPageId }, null)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
