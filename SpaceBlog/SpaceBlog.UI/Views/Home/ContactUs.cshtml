
@{
    ViewBag.Title = "ContactUs";
}

<style>
    label {
        color:aliceblue
    }
    h2 {
        color: aliceblue
    }
</style>
<div class="container">
    <div class="col-xs-6">
        <form action="Index.cshtml">

            <div class="jumbotron text-center">
                <h1>Contact Us</h1>
            </div>
            <div>
                <br /><br />
                <label for="fname"><h2>First Name</h2></label>
                <input type="text" id="fname" name="firstname" placeholder="Your name..">
            </div>
            <br /><br />
            <div>
                <label for="lname"><h2>Last Name</h2></label>
                <input type="text" id="lname" name="lastname" placeholder="Your last name..">
            </div>
            <br /><br />
            <div>
                <label for="country"><h2>Country</h2></label>
                <select id="country" name="country">
                    <option value="us">United States</option>
                    <option value="canada">Canada</option>
                    <option value="mexico">Mexico</option>
                </select>
            </div>
            <br /><br />
            <div>
                <label for="subject"><h2>Subject</h2></label>
                <textarea id="subject" name="subject" placeholder="Write something.." style="height:200px"></textarea>
            </div>
            <br /><br />



            <input type="submit" value="Submit">
            <i class="fa fa-file" aria-hidden="true"></i>
        </form>
    </div>
    <div class="col-xs-6">
        <br /><br />
        <br /><br />
        <br /><br />
        <br /><br />
        <br /><br />

        <div id="googleMap" style="width: 100%; height: 400px;"></div>

        <script>
            var markerImage = new google.maps.MarkerImage('img/icons/bank_euro.png',
                new google.maps.Size(30, 30),
                new google.maps.Point(0, 0),
                new google.maps.Point(15, 15));
            function myMap() {
                var mapProp = {
                    center: new google.maps.LatLng(44.978969, -93.271823),
                    zoom: 10,
                    mapTypeId: google.maps.MapTypeId.HYBRID,
                    icon: markerImage
                };
                var map = new google.maps.Map(document.getElementById("googleMap"), mapProp);
                marker.setMap(map);
            }
        </script>
        <br /><br />
        <div>
            <h4> </h4>
        </div>
    </div>
   
<script src="~/Scripts/tinymce/tinymce.js"></script>
    <script>
        tinymce.init({
            selector: '#subject'
        });
    </script>



    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAzvgHAOhSH7kazo_Yv98DjH3Q7l_uRqv8&callback=myMap"></script>
</div>



