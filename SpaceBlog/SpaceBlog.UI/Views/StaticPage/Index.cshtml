@model SpaceBlog.UI.Models.StaticPagesViewModel
@{
    ViewBag.Title = "StaticPage";
}

<style>
    label {
        color: black
    }

    h2 {
        color: aliceblue
    }
</style>
<h2>Static Page</h2>

<div class="row">
    <div class=" jumbotron col-xs-12">
        <div class="row">
            <div class="col-xs-5">
                @using (@Html.BeginForm("Add", "StaticPage", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
            {
                    <div class="form-group form-inline">
                        <label>Page Title</label>
                        @Html.TextBoxFor(m => m.StaticPagetoView.StaticPageTitle, new { @class = "form-control", style = "width: 400px;" })
                    </div>
                    <div class="form-group form-inline">
                        @Html.TextAreaFor(m => m.StaticPagetoView.StaticPageBody, new { @class = "form-control", id = "subject" })
                        <div id="textContainer">
                            <label for="subject">Page Body</label>
                  
                        </div>
                    </div>


                <div class="form-group">
                    <label>Picture</label>
                    <input id="ImageUpload" name="ImageUpload" type="file" class="form-control" />
                </div>



                    <div align="right">
                        <input type="submit" value="Submit" class="submitbutton" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>




<script src="@Url.Content("~/Scripts/SavePostScript.js")"></script>
<script src="~/Scripts/tinymce/tinymce.min.js"></script>
<script>
            tinyMCE.init({
                selector: "#subject",
                theme: "modern",
                //            ($'#submit').onClick(function() {
                //            $('#subject').html()
                //        });

            });
</script>
