@model Exercises.Models.ViewModels.StudentVM
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-xs-12 col-sm-3">
        @Html.Partial("StudentNav")
    </div>
    <div class="col-xs-12 col-sm-9">
        <div class="row">
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(m => m.Student.StudentId)
               
                <div class="col-xs-12 col-sm-7">
                    <h3>Edit Student</h3>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h4 class="panel-title">Personal Details</h4>
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label>First Name:</label>
                                        @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control" })
                                    </div>
                                   <div class="form-group">
                                        <label>Last Name:</label>
                                        @Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>Major:</label>
                                        @Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, "-Choose One-", new { @class = "form-control" })
                                  </div>
                                    <div class="form-group">
                                        <label>GPA:</label>
                                        @Html.TextBoxFor(m => m.Student.GPA, new { @class = "form-control" })
                                    </div>
                                    <h4>Courses</h4>
                                    <div class="form-group">
                                        <div>Previously Selected Courses:
                                            @if (Model.Student.Courses != null )
                                            {
                                                <ul>
                                                    @foreach (var course in Model.Student.Courses)
                                                    {
                                                        <li style="list-style-type:none">@course.CourseName</li>
                                                    }
                                                </ul>

                                            }
                                            else
                                            {
                                                <span> none</span>
                                            }
                                            @Html.ListBoxFor(m => m.SelectedCourseIds, Model.CourseItems, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-5">
                    <h3>Edit Address</h3>
                    @Html.HiddenFor(m => m.Student.Address.AddressId)
                        <div class="row">
                            <div class="col-xs-12 col-sm-12">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">Address</h4>
                                    </div>
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <label>Street1:</label>
                                            @Html.TextBoxFor(m => m.Student.Address.Street1, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>Street2:</label>
                                            @Html.TextBoxFor(m => m.Student.Address.Street2, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>City:</label>
                                            @Html.TextBoxFor(m => m.Student.Address.City, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            @*<label>Current State: @Model.Student.Address.State.StateName</label>*@
                                            @if (Model.Student.Address != null)
                                            {
                                                @Html.DropDownListFor(m => m.Student.Address.State.StateAbbreviation, Model.StateItems, Model.Student.Address.State.StateAbbreviation, new { @class = "form-control" })
                                            }
                                            else
                                            {
                                                @Html.DropDownListFor(m => m.Student.Address.State.StateAbbreviation, Model.StateItems, new { @class = "form-control" })
                                            }
                                        </div>
                                        <div class="form-group">
                                            <label>Zip Code:</label>
                                            @Html.TextBoxFor(m => m.Student.Address.PostalCode, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-primary">Save</button>
                        </div>
                    </div>
                }
        </div>
    </div>
</div>




