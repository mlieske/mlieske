@model Exercises.Models.Data.Course
@{
    ViewBag.Title = "DeleteCourse";
}

<div class="container">
    <h2>Remove Course</h2>
    @Html.ActionLink("Return to list", "Courses", "Admin")

    @using (Html.BeginForm("DeleteCourse", "Admin", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.CourseId)
        <p>Are you sure you want to delete course: @Model.CourseName?</p>
        <button type="submit" class="btn btn-danger">Delete</button>
        @Html.ActionLink("Cancel", "Courses", "Admin", null, new { @class = "btn btn-info" })
    }
</div>

