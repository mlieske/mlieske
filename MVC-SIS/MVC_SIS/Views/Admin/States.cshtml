@model List<Exercises.Models.Data.State>
@{
    ViewBag.Title = "States";
}

<div class="row">
    <div class="col-xs-5">
        <h2>States</h2>
        @Html.ActionLink("Add State","AddState","Admin", null, new { @class = "btn btn-primary" })
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>State Name</th>
                    <th>State Abbreviation</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var state in Model)
                {
                    <tr>
                        <td>@state.StateName</td>
                        <td>@state.StateAbbreviation</td>
                        <td>@Html.ActionLink("Edit","EditState","Admin",new { id = state.StateAbbreviation },null) | 
                            @Html.ActionLink("Delete","DeleteState","Admin", new { id = state.StateAbbreviation },null)</td>
                    </tr>
                }
            </tbody>

        </table>

    </div>

</div>
