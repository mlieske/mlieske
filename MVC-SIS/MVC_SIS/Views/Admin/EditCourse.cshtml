@model Exercises.Models.Data.Course
@{
    ViewBag.Title = "EditCourse";
}

<h2>Edit Course</h2>
@Html.ActionLink("Return to list","Courses","Admin")

@using (Html.BeginForm("EditCourse", "Admin", FormMethod.Post))
{
    @Html.HiddenFor(m => m.CourseId)
    <div class="form-group">
        <label>Course Name</label>
        @Html.TextBoxFor(m => m.CourseName, new { @class = "form-control" ,placeholder = Model.CourseName})
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

